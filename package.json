{
  "name": "ts_aws_template",
  "version": "1.0.0",
  "description": "Typescript aws lambda template",
  "repository": "https://github.com/TendTo/ts-aws-lambda-template",
  "author": "TendTo",
  "license": "MIT",
  "workspaces": [
    "./src/myFunction",
    "./src/myFunction2",
    "./src/myLayer"
  ],
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "prebuild": "tsc",
    "build": "sam build",
    "invoke": "sam local invoke --template-file template.yaml --config-file samconfig.toml --config-env dev",
    "predeploy": "npm run build",
    "deploy": "sam deploy --config-file samconfig.toml --config-env dev",
    "clean": "rm -r ./dist && rm -r ./.aws-sam"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^27.0.3",
    "jest": "^27.4.3",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
