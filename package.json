{
  "name": "rest_crud_api",
  "version": "1.0.0",
  "description": "Simple REST CRUD API",
  "repository": "https://github.com/TendTo/ts-aws-lambda-template",
  "author": "TendTo",
  "license": "MIT",
  "workspaces": [
    "./src/create",
    "./src/read",
    "./src/update",
    "./src/delete",
    "./src/dependencies"
  ],
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "prebuild": "tsc",
    "build": "sam build",
    "invoke": "sam local invoke --config-file samconfig.toml --config-env dev",
    "predeploy": "npm run build",
    "deploy": "sam deploy --config-file samconfig.toml --config-env dev",
    "clean": "rm -r ./dist && rm -r ./.aws-sam"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/jest": "^27.0.3",
    "jest": "^27.4.3",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
