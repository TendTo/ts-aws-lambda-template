{
    "compilerOptions": {
        "resolveJsonModule": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "target": "es2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "/opt/nodejs/*": [
                "./myLayer/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/package.json",
        "src/**/package-lock.json",
    ],
    "exclude": [
        "src/**/temp.ts",
        "src/**/*.test.ts"
    ]
}